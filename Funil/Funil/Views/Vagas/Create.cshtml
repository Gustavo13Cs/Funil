
@{
    ViewBag.Title = "Create";
}

<h2>Criar Nova Vaga</h2>

<div>
    <form action="/Vagas/Create" method="post">
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control"
                   maxlength="500"
                   id="Nome" name="Nome"
                   required />
        </div>
        <div class="form-group">
            <label for="descricao">Descrição</label>
            <input type="text" class="form-control"
                   maxlength="1000"
                   id="descricao" name="descricao" min="0"
                   value="0"
                   required />
        </div>
        <div class="form-group">
            <label for="atribuicao">Atribuição</label>
            <input type="text" class="form-control"
                   maxlength="1000"
                   id="atribuicao" name="atribuicao" min="0"
                   value="0"
                   required />
        </div>
        <div class="form-group">
            <label for="salario">Salario</label>
            <input class="form-control"
                   maxlength="10"
                   id="salario" name="salario" min="0"
                   value="0"
                   required />
        </div>
        <div class="form-group">
            <label for="requisito">Requisito</label>
            <input type="text" class="form-control"
                   maxlength="1000"
                   id="requisito" name="requisito" min="0"
                   value="0"
                   required />
        </div>
        <div class="form-group">
            <label for="cadastro">Data do Cadastro</label>
            <input type="datetime" class="form-control"
                   id="cadastro" name="cadastro" min="0"
                   value="0"
                   required />
        </div>
        <div>
            <a href="/Vagas/Index"> <button type="button" class="btn btn-primary">Voltar</button>  </a>
            <a href="/Vagas/Index"> <button type="submit" class="btn btn-success">Salvar</button>  </a>
        </div>
    </form>
</div>



